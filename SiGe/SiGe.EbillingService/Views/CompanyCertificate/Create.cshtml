@model SiGe.CompanyCertificateViewModel;

@{ ViewData["Title"] = "Nuevo"; }

<div class="page-header">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="title">
                <h4>Nuevo Registro</h4>
            </div>
            <nav aria-label="breadcrumb" role="navigation">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Certificados</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Mis Certificados</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="pd-20 card-box mb-30">
    <div class="clearfix">
        <div class="pull-left">
            <h4 class="text-blue h4">Datos de Empresa</h4>
        </div>
    </div>
    <form asp-controller="CompanyCertificate" asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <label asp-for="File" class="col-sm-12 col-md-2 col-form-label">Certificado:</label>
            <div class="col-sm-12 col-md-10">
                <input asp-for="File" class="form-control" type="file">
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Password" class="col-sm-12 col-md-2 col-form-label">Password :</label>
            <div class="col-sm-12 col-md-10">
                <input asp-for="Password" class="form-control" type="password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ExpiredDate" class="col-sm-12 col-md-2 col-form-label">Fecha de Vencimiento :</label>
            <div class="col-sm-12 col-md-10">
                <input asp-for="ExpiredDate" class="form-control" type="date">
                <span asp-validation-for="ExpiredDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-primary" />
            <input asp-action="Index" type="submit" value="Volver" class="btn btn-danger" />
        </div>
    </form>
</div>