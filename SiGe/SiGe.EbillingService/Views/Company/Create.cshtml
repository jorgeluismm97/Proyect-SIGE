@model SiGe.CompanyModel;

@{ ViewData["Title"] = "Nuevo"; }

<div class="page-header">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="title">
                <h4>Nuevo Registro</h4>
            </div>
            <nav aria-label="breadcrumb" role="navigation">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Empresas</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Mis Empresas</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="pd-20 card-box mb-30">
    <div class="clearfix">
        <div class="pull-left">
            <h4 class="text-blue h4">Datos de Empresa</h4>
        </div>
    </div>
    <form asp-controller="Company" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <label asp-for="IdentityDocumentNumber" class="col-sm-12 col-md-2 col-form-label">RUC</label>
            <div class="col-sm-12 col-md-10">
                <input asp-for="IdentityDocumentNumber" class="form-control" type="number" readonly>
                <span asp-validation-for="IdentityDocumentNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="BusinessName" class="col-sm-12 col-md-2 col-form-label">Razon Social</label>
            <div class="col-sm-12 col-md-10">
                <input asp-for="BusinessName" class="form-control" type="text" placeholder="Razon Social">
                <span asp-validation-for="BusinessName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Address" class="col-sm-12 col-md-2 col-form-label">Dirección</label>
            <div class="col-sm-12 col-md-10">
                <input asp-for="Address" class="form-control" type="text" placeholder="Dirección">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-primary" />
            <input asp-action="Index" type="submit" value="Volver" class="btn btn-danger" />
        </div>
    </form>
</div>