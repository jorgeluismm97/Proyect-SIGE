@model SiGe.BranchOfficeViewModel;

@{ ViewData["Title"] = "Nuevo"; }

<div class="page-header">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="title">
                <h4>Nuevo Registro</h4>
            </div>
            <nav aria-label="breadcrumb" role="navigation">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Sucursal</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Mi Sucursal</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="pd-20 card-box mb-30">
    <div class="clearfix">
        <div class="pull-left">
            <h4 class="text-blue h4">Datos de Usuario</h4>
        </div>
    </div>
    <form asp-controller="BranchOffice" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="branchOfficeModel.PersonId" class="col-sm-12 col-md-2 col-form-label">Sucursal</label>
            <div class="col-sm-12 col-md-10">
                <select asp-for="branchOfficeModel.PersonId" class="selectpicker form-control" data-style="btn-outline-primary" data-size="5">
                    <optgroup label="Elegi una opcion" data-max-options="2">
                        @foreach (var item in Model.personModels)
                        {
                            <option value="@item.PersonId">@string.Concat(item.FatherLastName + " " + item.MotherLastName + ", " + item.Name)</option>
                        }
                    </optgroup>
                </select>
                <span asp-validation-for="branchOfficeModel.PersonId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="branchOfficeModel.Code" class="col-sm-12 col-md-2 col-form-label">Codigo :</label>
            <div class="col-sm-12 col-md-10">
                <input asp-for="branchOfficeModel.Code" class="form-control" type="text" placeholder="Codigo">
                <span asp-validation-for="branchOfficeModel.Code" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="branchOfficeModel.Name" class="col-sm-12 col-md-2 col-form-label">Nombre :</label>
            <div class="col-sm-12 col-md-10">
                <input asp-for="branchOfficeModel.Name" class="form-control" type="text" placeholder="Nombre">
                <span asp-validation-for="branchOfficeModel.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="branchOfficeModel.Address" class="col-sm-12 col-md-2 col-form-label">Dirección :</label>
            <div class="col-sm-12 col-md-10">
                <input asp-for="branchOfficeModel.Address" class="form-control" type="text" placeholder="Dirección">
                <span asp-validation-for="branchOfficeModel.Address" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="branchOfficeModel.Telephone" class="col-sm-12 col-md-2 col-form-label">Teléfono :</label>
            <div class="col-sm-12 col-md-10">
                <input asp-for="branchOfficeModel.Telephone" class="form-control" type="text" placeholder="Teléfono">
                <span asp-validation-for="branchOfficeModel.Telephone" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="branchOfficeModel.Cellular" class="col-sm-12 col-md-2 col-form-label">Celular :</label>
            <div class="col-sm-12 col-md-10">
                <input asp-for="branchOfficeModel.Cellular" class="form-control" type="text" placeholder="Celular">
                <span asp-validation-for="branchOfficeModel.Cellular" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-primary" />
            <input asp-action="Index" type="submit" value="Volver" class="btn btn-danger" />
        </div>
    </form>
</div>
