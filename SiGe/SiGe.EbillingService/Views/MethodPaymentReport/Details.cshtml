@model List<SiGe.MethodPaymentViewModel>;

@{ ViewData["Title"] = "Detalles"; }

<div class="page-header">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <hr />

            <table class="table">
                <thead>
                    <tr>
                        <th>Forma de pago</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
            <td>@Html.DisplayFor(modelItem => item.Total)</td>
        </tr>
}
                </tbody>

            </table>


        </div>
    </div>
    <form asp-controller="MethodPaymentReport">
        <input asp-action="Index" type="submit" value="Volver" class="btn btn-danger" />
    </form>

</div>