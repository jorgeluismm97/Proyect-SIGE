@model SiGe.NoteCreateViewModel;

@{ ViewData["Title"] = "Nuevo"; }

<div class="page-header">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="title">
                <h4>Nueva Nota</h4>
            </div>
            <nav aria-label="breadcrumb" role="navigation">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Notas de Salida</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Mis Notas de Salida</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<!-- Default Basic Forms Start -->
<div class="pd-20 card-box mb-30">
    <div class="clearfix">
        <div class="pull-left">
            <h4 class="text-blue h4">Datos de las Notas</h4>
        </div>
    </div>
    <form asp-controller="NoteOut" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="form-group row col-md-4">
                <label asp-for="NoteTypeId" class="col-sm-6 col-md-3 col-form-label">Tipos de Notas</label>
                <div class="col-sm-12 col-md-9">
                    <select asp-for="NoteTypeId" class="selectpicker form-control" data-style="btn-outline-primary" data-size="5">
                        <optgroup label="Elige una opcion" data-max-options="2">
                            @foreach (var item in Model.NoteTypes)
                            {
                <option value="@item.NoteTypeId">@string.Concat(item.Description)</option>
}
                        </optgroup>
                    </select>
                    <span asp-validation-for="NoteTypeId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row col-md-5">
                <label asp-for="IssueDate" class="col-sm-12 col-md-3 col-form-label">Fecha de Emis.</label>
                <div class="col-sm-12 col-md-9">
                    <input asp-for="IssueDate" class="form-control" placeholder="Fecha" type="date">
                    <span asp-validation-for="IssueDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row col-md-3">
                <label asp-for="Number" class="col-sm-6 col-md-4 col-form-label">Número</label>
                <div class="col-sm-12 col-md-8">
                    <input asp-for="Number" class="form-control" placeholder="Número" type="text" readonly>
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group row col-md-12">
                <label asp-for="Description" class="col-sm-12 col-md-2 col-form-label">Descripcion.</label>
                <div class="col-sm-12 col-md-10">
                    <input asp-for="Description" class="form-control" placeholder="Descripcion" type="text">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <input class="btn btn-primary popup" data-url="Product/Search" data-toggle="modal" data-target="#modal-search-product" id="ProductModel" type="button" value="Productos" />
        </div>

        <div class="card-box mb-30">
            <div class="pd-20">
                <h4 class="text-blue h4">Listado del Productos</h4>
            </div>
            <div class="pb-20">
                <table id="example" class="table stripe hover nowrap">
                    <thead>
                        <tr>
                            <th>Codigo</th>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Precio Unitario</th>
                            <th>Precio Total</th>
                            <th>Accion</th>
                        </tr>
                    </thead>
                    <tbody class="DocumentList">
                        @foreach (var item in Model.Details)
                        {
                            string selectedRow = "";
                            if (item.ProductId == (int?)ViewData["ProductId"])
                            {
                                selectedRow = "success";
                            }

            <tr class="@selectedRow">
                <td class="table-plus"> @Html.DisplayFor(modelItem => item.Code)</td>
                <td class="table-plus"> @Html.DisplayFor(modelItem => item.Description)</td>
                <td class="table-plus"> @Html.DisplayFor(modelItem => item.Quantity)</td>
                <td class="table-plus"> @Html.DisplayFor(modelItem => item.Price())</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    <div class="dropdown2">
                        <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                            <i class="dw dw-more"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.ProductId"><i class="dw dw-edit2"></i>Quitar</a>
                        </div>
                    </div>
                </td>
            </tr>}
                    </tbody>
                </table>

            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-primary" />
            <input asp-action="Index" type="submit" value="Volver" class="btn btn-danger" />
        </div>
    </form>
</div>
<!-- Default Basic Forms End -->
<!--Modal-->
<!--Product-->
<div aria-hidden="true" aria-labelledby="modal-search-product-label" role="dialog" tabindex="-1" id="modal-search-product" class="modal fade ">
