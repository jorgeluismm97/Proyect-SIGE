@model SiGe.SerieViewModel;

@{ ViewData["Title"] = "Nuevo"; }

<div class="page-header">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="title">
                <h4>Nuevo Registro</h4>
            </div>
            <nav aria-label="breadcrumb" role="navigation">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Series</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Mis Series</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<!-- Default Basic Forms Start -->
<div class="pd-20 card-box mb-30">
    <div class="clearfix">
        <div class="pull-left">
            <h4 class="text-blue h4">Datos de Usuario</h4>
        </div>
    </div>
    <form asp-controller="Serie" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <label asp-for="DocumentTypeId" class="col-sm-12 col-md-2 col-form-label">Tipo de Comprobante : </label>
            <div class="col-sm-12 col-md-10">
                <select asp-for="DocumentTypeId" class="selectpicker form-control" data-style="btn-outline-primary" data-size="5">
                    <optgroup label="Elige una opcion" data-max-options="2">
                        @foreach (var item in Model.DocumentTypes)
                        {
            <option value="@item.DocumentTypeId">@string.Concat(item.Description)</option>}
                    </optgroup>
                </select>
                <span asp-validation-for="DocumentTypeId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="BranchOfficeId" class="col-sm-12 col-md-2 col-form-label">Sucursal : </label>
            <div class="col-sm-12 col-md-10">
                <select asp-for="BranchOfficeId" class="selectpicker form-control" data-style="btn-outline-primary" data-size="5">
                    <optgroup label="Elige una opcion" data-max-options="2">
                        @foreach (var item in Model.BranchOffices)
                        {
            <option value="@item.BranchOfficeId">@string.Concat(item.Name)</option>}
                    </optgroup>
                </select>
                <span asp-validation-for="BranchOfficeId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Serie" class="col-sm-12 col-md-2 col-form-label">Serie : </label>
            <div class="col-sm-12 col-md-10">
                <input asp-for="Serie" class="form-control" placeholder="Serie" type ="text">
                <span asp-validation-for="Serie" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="IsElectronic" class="col-sm-12 col-md-2 col-form-label">Electrónico : </label>
            <div class="col-sm-12 col-md-10">
                <input asp-for="IsElectronic" class="check-mark" type ="checkbox">
                <span asp-validation-for="IsElectronic" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-primary" />
            <input asp-action="Index" type="submit" value="Volver" class="btn btn-danger" />
        </div>
    </form>
</div>
<!-- Default Basic Forms End -->