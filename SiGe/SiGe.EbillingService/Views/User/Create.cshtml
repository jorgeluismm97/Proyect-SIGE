@model SiGe.UserViewModel;

@{ ViewData["Title"] = "Nuevo"; }

<div class="page-header">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="title">
                <h4>Nuevo Registro</h4>
            </div>
            <nav aria-label="breadcrumb" role="navigation">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Usuarios</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Mis Usuarios</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<!-- Default Basic Forms Start -->
<div class="pd-20 card-box mb-30">
    <div class="clearfix">
        <div class="pull-left">
            <h4 class="text-blue h4">Datos de Usuario</h4>
        </div>
    </div>
    <form asp-controller="User" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <label asp-for="personId" class="col-sm-12 col-md-2 col-form-label">Personal</label>
            <div class="col-sm-12 col-md-10">
                <select asp-for="personId" class="selectpicker form-control" data-style="btn-outline-primary" data-size="5">
                    <optgroup label="Elegi una opcion" data-max-options="2">
                        @foreach (var item in Model.personModels)
                        {
            <option value="@item.PersonId">@string.Concat(item.IdentityDocumentNumber + " - " + item.FatherLastName + " " + item.MotherLastName + ", " + item.Name)</option>
}
                    </optgroup>
                </select>
                <span asp-validation-for="personId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Password" class="col-sm-12 col-md-2 col-form-label">Password</label>
            <div class="col-sm-12 col-md-10">
                <input asp-for="Password" class="form-control" type="text" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="ConfirmPassword" class="col-sm-12 col-md-2 col-form-label">Confirmar Password</label>
            <div class="col-sm-12 col-md-10">
                <input asp-for="ConfirmPassword" class="form-control" type="text" placeholder="Confirmar Password">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-primary" />
            <input asp-action="Index" type="submit" value="Volver" class="btn btn-danger" />
        </div>
    </form>
</div>
<!-- Default Basic Forms End -->