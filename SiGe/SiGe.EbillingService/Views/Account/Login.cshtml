@model SiGe.LoginViewModel;
@{
    ViewData["Title"] = "Login";
}


<div class="login-page">
    <div class="login-wrap d-flex align-items-center flex-wrap justify-content-center">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 col-lg-7">
                    <img src="~/img/login-page-img.png" alt="">
                </div>
                <div class="col-md-6 col-lg-5">
                    <div class="login-box bg-white box-shadow border-radius-10">
                        <div class="login-title">
                            <h2 class="text-center text-primary">Ingresar a SIGE</h2>
                        </div>
                        <form asp-controller="Account" asp-action="Login" method="post">
                            <!-- Caja de texto de Usuario -->
                            <div class="form-group has-feedback">
                                <div class="input-group">
                                    <select asp-for="IdentityAction" id='id_categoria' class="form-control form-control-lg" >
                                        <option value="1">Panel de Adminitración</option>
                                        <option value="2">Panel de Empresa</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Caja de texto de Usuario -->
                            <div class="form-group">
                                <label asp-for="IdentityDocumentNumber"></label>
                                <input asp-for="IdentityDocumentNumber" id="id_input" class="form-control" disabled/>
                                <span asp-validation-for="IdentityDocumentNumber" class="text-danger"></span>
                            </div>

                            <!-- Caja de texto de Usuario -->
                            <div class="form-group">
                                <label asp-for="UserName"></label>
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <!-- Caja de texto de Password -->
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                                    <label class="custom-control-label" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                                </div>

                            </div>

                            <div class="row pb-30">
                                <div class="col-6">
                                </div>
                                <div class="col-6">
                                    <div class="forgot-password"><a href="forgot-password.html">¿Has olvidado tu contraseña?</a></div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="input-group mb-0">
                                        <input type="submit" class="btn btn-primary btn-lg btn-block" id="load" data-loading-text="Ingresar" value="Ingresar">
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
